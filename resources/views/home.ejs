
    <section class="hero py-16">
        <div class="container mx-auto flex items-center justify-between">
            <div class="w-1/2">
                <h6 class="text-lg"><em>Are you hungry ?</em></h6>
                <h1 class="text-6xl font-bold">Don't wait !</h1>
                <button class="order-now py-1 px-6 rounded-full flex items-center font-bold">Order Now </button>
            </div>
            <div class="w-1/2">
                <img src="/img/hero-pizza.png" alt="herelogo">
            </div>
        </div>
    </section>

    <section class="menu container mx-auto py-8">
        <h1 class="text-xl font-bold mb8">All Pizzas</h1>
        <div class="grid grid-cols-4 row-gap-10 col-gap-12">

            <% pizzas.forEach((pizza)=>{
                %>
                <div class="w-64 mt-6">
                    <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="img">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg "><%= pizza.name %></h2>
                        <span lang="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                            <div class="flex items-center justify-around mt-6">
                                <span class="font-bold text-lg"><%= pizza.price %></span>
                                <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                                    <span>+</span>
                                    <span class="ml-4">Add</span>
                                </button>
                            </div>
                    </div>
                </div>
                <%
            })%>
            
        </div>
    </section>


